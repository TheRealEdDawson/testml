#!/usr/bin/env testml-pl5

*test.make-test == *out
  :"'test/{*test}' output is correct"

%Bridge perl5

use Capture::Tiny 'capture_merged';

sub make_test {
    my ($self, $test) = @_;

    my $out = capture_merged {
        system "make test test=test/$test";
    };

    $out =~ s/^All tests successful.*//ms;
    $out =~ s/.*\n.*\n//;

    return $out;
}


